<script>
    let hcTrend, hcHist, hcStacked;

    /* ===== Highcharts ÌÖåÎßà Ï†ÅÏö© ===== */
    function applyHCTheme() {
        Highcharts.setOptions({
            time: { useUTC: false },
            chart: {
                backgroundColor: 'transparent',
                style: { fontFamily: "'Pretendard','Malgun Gothic',sans-serif" },
